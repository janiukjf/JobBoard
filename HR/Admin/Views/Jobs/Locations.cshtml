@{
    List<Admin.Models.DisplayableLocation> locations = ViewBag.locations ?? new List<Admin.Models.DisplayableLocation>();
    
    string msg = ViewBag.msg;
    msg = (msg == null) ? "" : msg;
    
    ViewBag.Title = "Job Locations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="/Admin/Content/css/location.css" rel="stylesheet" type="text/css" />
<h3>Jobs By Location</h3>
<p class="index_desc">
    Below you will find a list of all the job locations in the system. If you'd like to add a new location, click the button to the right.
</p>

<a href="/Admin/Locations/Add" title="Add Location" class="index_add">
    <img src="/Admin/Content/img/add_location.png" alt="Add Location" />
</a>
<div class="clearfix"></div>

@if (msg.Length > 0) {
    <p class="err">@msg</p>
}

<table>
    <thead>
        <tr>
            <th>Location</th>
            <th>Jobs</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Admin.Models.DisplayableLocation location in locations) {
            <tr>
                <td>@location.city, @location.abbr</td>
                <td style="text-align: center;">@location.jobCount</td>
                <td class="last">
                    <a href="/Admin/Jobs/Location/@location.id" title="View @location.city, @location.abbr jobs">See Jobs</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<script src="/Admin/Scripts/custom/location.js" type="text/javascript"></script>
