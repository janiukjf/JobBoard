@{
    List<Admin.Models.CategoryWithParent> cats = ViewBag.categories ?? new List<Admin.Models.CategoryWithParent>();
    
    string msg = ViewBag.msg;
    msg = (msg == null) ? "" : msg;
    
    ViewBag.Title = "Job Categories";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="/Admin/Content/css/category.css" rel="stylesheet" type="text/css" />
<h3>Jobs By Category</h3>
<p class="index_desc">
    Below you will find a list of all the job categories in the system. If you'd like to add a new category, click the button to the right.
</p>

<a href="/Admin/Categories/Add" title="Add Category" class="index_add">
    <img src="/Admin/Content/img/add_category.png" alt="Add Category" />
</a>
<div class="clearfix"></div>

@if (msg.Length > 0) {
    <p class="err">@msg</p>
}

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Jobs</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Admin.Models.CategoryWithParent cat in cats) {
            <tr>
                <td>@cat.name</td>
                <td style="text-align: center;">@cat.jobCount</td>
                <td class="last">
                    <a href="/Admin/Jobs/Category/@cat.id" title="View @cat.name jobs">See Jobs</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<script src="/Admin/Scripts/custom/category.js" type="text/javascript"></script>
