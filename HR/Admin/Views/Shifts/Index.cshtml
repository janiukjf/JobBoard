@{
    List<Admin.Shift> shifts = ViewBag.shifts ?? new List<Admin.Shift>();
    
    string msg = ViewBag.msg;
    msg = (msg == null) ? "" : msg;
    
    ViewBag.Title = "Shifts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="/Admin/Content/css/shifts.css" rel="stylesheet" type="text/css" />
<p class="index_desc">
    Below you will find a list of all the job shifts in the system. If you'd like to add a new shift, click the button to the right.
</p>

<a href="/Admin/Shifts/Add" title="Add Shift Level" class="index_add">
    <img src="/Admin/Content/img/add_shift.png" alt="Add Shift Level" />
</a>
<div class="clearfix"></div>

@if (msg.Length > 0) {
    <p class="err">@msg</p>
}

<table>
    <thead>
        <tr>
            <th>Shift</th>
            <th>Date Added</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Admin.Shift shift in shifts) {
            <tr>
                <td>@shift.shift1</td>
                <td>@Convert.ToDateTime(shift.date_added)</td>
                <td class="last">
                    <a href="/Admin/Shifts/@shift.id" title="Edit Shift">Edit</a> | 
                    <a href="/Admin/Shifts/Delete/@shift.id" class="del" title="Delete Shift">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<script src="/Admin/Scripts/custom/shifts.js" type="text/javascript"></script>
