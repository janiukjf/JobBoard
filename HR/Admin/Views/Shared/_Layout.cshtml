    <!-- Use the .htaccess and remove these lines to avoid edge case issues.
           More info: h5bp.com/b/378 -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>CURT Mfg Job Board Administrative Tools - @ViewBag.Title</title>
    <meta name="description" content="">
    <meta name="author" content="">
    <link href="/Admin/Content/less/Site.css" rel="stylesheet" type="text/css" />
    <link href="/Admin/Content/themes/base/jquery.ui.all.css" rel="stylesheet" type="text/css" />
    <link href="/Admin/Content/demo_table_jui.css" rel="stylesheet" type="text/css" />
    <!--link rel="stylesheet/less" href="/Content/less/bootstrap/bootstrap.less" type="text/css" /-->
    <!-- Mobile viewport optimized: j.mp/bplateviewport -->
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <!-- All JavaScript at the bottom, except this Modernizr build incl. Respond.js
           Respond is a polyfill for min/max-width media queries. Modernizr enables HTML5 elements & feature detects; 
           for optimal performance, create your own custom Modernizr build: www.modernizr.com/download/ -->
    <script src="@Url.Content("~/Scripts/modernizr-2.0.6-development-only.js")" type="text/javascript"></script>
    <!-- Grab Google CDN's jQuery, with a protocol relative URL; fall back to local if offline -->
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js" type="text/javascript"></script>
    <script type="text/javascript">        window.jQuery || document.write('<script src="\/Scripts\/jquery-1.8.3.min.js"><\/script>')</script>
    <meta charset="utf-8" />
</head>
<body>
    <div id="container">
        <header>
            <a href="/Admin" title="CURT Manufacturing, LLC Job Board" class="logo">
                <img src="/Content/img/logo.png" alt="CURT Manufacturing, LLC Job Board" />
            </a>
            <div class="title">
                <span>Job Board Administrative Tools</span>
            </div>
        </header>
        <div id="main" role="main">
            @if (ViewBag.hide_logout == null) {
                <nav class="clearfix">
                    <ul class="top">
                        @if (ViewBag.user.level == "ADMIN") {
                            <li class="main">
                                <a href="/Admin/Jobs">
                                    <img src="/Content/img/right-arrow.png" />
                                    Job Postings
                                </a>
                                <ul class="sub">
                                    <li>
                                        <a href="/Admin/Jobs" title="View All">View All</a>
                                    </li>
                                    <li>
                                        <a href="/Admin/Jobs/Categories" title="View Jobs By Categories">View By Category</a>
                                    </li>
                                    <li>
                                        <a href="/Admin/Jobs/Locations" title="View Jobs By Location">View By Location</a>
                                    </li>
                                    <li>
                                        <a href="/Admin/Jobs/Archive" title="View Archive">View Archive</a>
                                    </li>
                                    <li>
                                        <a href="/Admin/Jobs/Add" title="Add Listing">Add New</a>
                                    </li>
                                </ul>
                            </li>
                        }
                        <li class="main">
                            <a href="/Admin/Applications">
                                <img src="/Content/img/right-arrow.png" />
                                Applications
                            </a>
                            <ul class="sub">
                                <li>
                                    <a href="/Admin/Applications" title="View All">View All</a>
                                </li>
                                <li>
                                    <a href="/Admin/Applications/Jobs" title="View By Job">View By Job</a>
                                </li>
                                <li>
                                    <a href="/Admin/Applications/Categories" title="View By Category">View By Category</a>
                                </li>
                                <li>
                                    <a href="/Admin/Applications/Locations" title="View By Location">View By Location</a>
                                </li>
                                <li>
                                    <a href="/Admin/Applications/Experiences" title="View By Experience">View By Experience</a>
                                </li>
                                <li>
                                    <a href="/Admin/Applications/Educations" title="View By Education">View By Education</a>
                                </li>
                                <li>
                                    <a href="/Admin/Applications/Archive" title="View Archive">View Archive</a>
                                </li>
                            </ul>
                        </li>
                        @if (ViewBag.user.level == "ADMIN") {
                            <li class="main">
                                <a href="">
                                    <img src="/Content/img/right-arrow.png" />
                                    Tools
                                </a>
                                <ul class="sub">
                                    <li>
                                        <a href="/Admin/Contacts" title="Manage Contacts">Manage Contacts</a>
                                    </li>
                                    <li>
                                        <a href="/Admin/Categories" title="Manage Categories">Manage Categories</a>
                                    </li>
                                    <li>
                                        <a href="/Admin/Locations" title="Manage Locations">Manage Locations</a>
                                    </li>
                                    <li>
                                        <a href="/Admin/Experience" title="Manage Experience">Manage Experience</a>
                                    </li>
                                    <li>
                                        <a href="/Admin/Education" title="Manage Education">Manage Education</a>
                                    </li>
                                    <li>
                                        <a href="/Admin/Shifts" title="Manage Shifts">Manage Shifts</a>
                                    </li>
                                </ul>
                            </li>
                        }
                        <li class="main">
                            <a href="/Admin/Authorize/Out" title="Log Out">
                                <img src="/Content/img/right-arrow.png" />
                                Log Out
                            </a>
                        </li>
                    </ul>
                </nav>
                <div class="dynamic_container">
                    @RenderBody()
                </div>
            } else {
                @RenderBody()
            }
        </div>
        <footer>
        </footer>
    </div>
    <!--! end of #container -->
    <!-- JavaScript at the bottom for fast page loading -->
    <!-- Grab Google CDN's jQueryUI, with protocol relative URL; fall back to local if offline -->
    <script type="text/javascript" src="//ajax.googleapis.com/ajax/libs/jqueryui/1.8.16/jquery-ui.min.js"></script>
    <script type="text/javascript">         window.jQuery || document.write('<script src="\/Scripts\/jquery-ui-1.8.16.min.js"><\/script>')</script>
    <!-- scripts concatenated and minified via build script -->
    <script defer src="/Admin/Scripts/jquery.hoverIntent.minified.js" type="text/javascript"></script>
    <script defer src="/Admin/Scripts/custom/plugins.js" type="text/javascript"></script>
    <script defer src="/Admin/Scripts/custom/global.js" type="text/javascript"></script>
    <!-- Write out less.js for badass CSS -->
    <script src="@Url.Content("~/Scripts/less.js")" type="text/javascript"></script>
    <script src="/Admin/Scripts/jquery.dataTables.min.js" type="text/javascript"></script>
    <!-- end scripts -->
    <!-- Asynchronous Google Analytics snippet. Change UA-XXXXX-X to be your site's ID.
       mathiasbynens.be/notes/async-analytics-snippet -->
