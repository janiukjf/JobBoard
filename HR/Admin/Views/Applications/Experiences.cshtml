@{
    List<Admin.Experience> experiences = ViewBag.experiences ?? new List<Admin.Experience>();
    
    string msg = ViewBag.msg;
    msg = (msg == null) ? "" : msg;
    
    ViewBag.Title = "Applications By Experience";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="/Admin/Content/css/location.css" rel="stylesheet" type="text/css" />
<h3>Applications By Experience</h3>
<div class="clearfix"></div>

<table>
    <thead>
        <tr>
            <th>Experience</th>
            <th>Applications</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Admin.Experience exp in experiences) {
            <tr>
                <td>@exp.experience1</td>
                <td style="text-align: center;">@exp.applicationCount</td>
                <td class="last">
                    <a href="/Admin/Applications/Experience/@exp.id" title="View @exp.experience1 applications">View Apps</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<script src="/Admin/Scripts/custom/location.js" type="text/javascript"></script>
